<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.explore.exploreCountry.ExploreCountryFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/explore_country_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/flightsMainColor">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                app:layout_collapseMode="parallax">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/explore_country_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    app:tabTextColor="@android:color/white"
                    app:tabSelectedTextColor="@android:color/white"
                    app:tabIndicatorColor="@android:color/white"
                    app:tabIndicatorHeight="3dp"
                    app:tabPaddingStart="25dp"
                    app:tabPaddingEnd="25dp" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp">
                    <TextView
                        android:id="@+id/explore_country_tv_origin"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:background="@drawable/search_flights_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/explore_country_tv_destination"
                        android:clickable="true"
                        android:paddingStart="15dp"
                        android:hint="@string/city_origin"
                        android:text="서울 김포"
                        android:textSize="16sp"
                        android:textColor="@color/flightsMainColor"
                        android:gravity="center_vertical" />
                    <TextView
                        android:id="@+id/explore_country_tv_destination"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:background="@drawable/search_flights_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/explore_country_tv_origin"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:paddingStart="15dp"
                        android:hint="@string/city_origin"
                        android:text="Everywhere"
                        android:textSize="16sp"
                        android:textColor="@color/flightsMainColor"
                        android:gravity="center_vertical" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/search_flights_tv"
                        app:layout_constraintTop_toBottomOf="@id/explore_country_tv_origin"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="여행 날짜:"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 시간 지정 안 함"
                            android:textSize="16sp"
                            android:textColor="@color/flightsMainColor"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <View
                android:id="@+id/explore_country_blind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/flightsMainColor"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/explore_country_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:theme="@style/ToolbarTheme"
                app:titleTextColor="@android:color/white"
                app:title="Everywhere 검색"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.jeahn.skyscanner.src.flights.flightsSearch.NonSwipeViewPager
            android:id="@+id/explore_country_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>