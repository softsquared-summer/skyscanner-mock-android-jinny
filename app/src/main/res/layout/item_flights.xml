<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="4dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <ImageView
                android:id="@+id/item_search_flights_iv_airline"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/item_search_flights_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/item_search_flights_iv_airline"
                android:layout_marginLeft="10dp"
                android:text="00:00 - 00:00"
                android:textColor="@color/flightsMainColor"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/item_search_flights_tv_from_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_search_flights_tv_time"
                android:layout_toRightOf="@id/item_search_flights_iv_airline"
                android:layout_marginLeft="10dp"
                android:text="ICN-CJU, "
                android:textColor="@color/flightsIconColor"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/item_search_flights_tv_airline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_search_flights_tv_time"
                android:layout_toRightOf="@id/item_search_flights_tv_from_to"
                android:text="항공"
                android:textColor="@color/flightsIconColor"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/item_search_flights_tv_nonstop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="직항"
                android:textColor="@color/flightsMainColor"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/item_search_flights_tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_search_flights_tv_nonstop"
                android:text="00분"
                android:textColor="@color/flightsIconColor"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/item_search_flights_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_search_flights_tv_duration"
                android:layout_marginTop="10dp"
                android:text="0,000"
                android:textColor="@color/flightsMainColor"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/item_search_flights_tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_search_flights_tv_price"
                android:text="2명 0,000"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>