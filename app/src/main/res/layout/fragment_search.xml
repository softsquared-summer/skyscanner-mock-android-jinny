<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".src.main.search.SearchFragment"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/search_appbar"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@android:color/white">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <TextView
                android:id="@+id/search_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:text="@string/search_title"
                android:textSize="34sp"
                android:textColor="@color/mainTextColor"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.2"/>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:layout_collapseMode="pin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.2">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/search_ibtn_flight"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_flight"
                        android:scaleType="centerCrop"
                        android:tint="@color/searchBtnForeground"
                        android:background="@drawable/search_ripple"
                        app:layout_behavior="com.jeahn.skyscanner.src.main.search.SearchImageButtonBehavior"/>
                    <TextView
                        android:id="@+id/search_tv_flight"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_ibtn_flight"
                        android:layout_centerHorizontal="true"
                        android:text="@string/search_flight"
                        android:textColor="@color/mainTextColor"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/search_ibtn_hotel"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_bed"
                        android:scaleType="centerCrop"
                        android:tint="@color/searchBtnForeground"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/searchBtnBackground"/>
                    <TextView
                        android:id="@+id/search_tv_hotel"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_ibtn_hotel"
                        android:layout_centerHorizontal="true"
                        android:text="@string/search_hotel"
                        android:textColor="@color/mainTextColor"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/search_ibtn_car_rental"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_car"
                        android:scaleType="centerCrop"
                        android:tint="@color/searchBtnForeground"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/searchBtnBackground"/>
                    <TextView
                        android:id="@+id/search_tv_car_rental"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_ibtn_car_rental"
                        android:layout_centerHorizontal="true"
                        android:text="@string/search_car_rental"
                        android:textColor="@color/mainTextColor"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"/>
                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/search_prediction_title"
                android:textColor="@color/mainTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner"
                android:backgroundTint="@color/searchBtnBackground">
                <ImageView
                    android:id="@+id/search_iv_graph"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic_sinusoid_graph"
                    android:tint="@color/searchBtnForeground" />
                <TextView
                    android:id="@+id/search_tv_prediction_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintLeft_toRightOf="@id/search_iv_graph"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/search_tv_prediction_2"
                    android:text="@string/search_prediction_content_1"
                    android:textColor="@color/mainTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:id="@+id/search_tv_prediction_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toRightOf="@id/search_iv_graph"
                    app:layout_constraintRight_toLeftOf="@id/search_tv_beta"
                    app:layout_constraintTop_toBottomOf="@id/search_tv_prediction_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/search_prediction_content_2"
                    android:textSize="12sp"
                    android:textColor="@color/mainTextColor"
                    android:maxLines="2"/>
                <TextView
                    android:id="@+id/search_tv_beta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/round_corner"
                    android:text="@string/search_prediction_beta"
                    android:textSize="12dp"
                    android:gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginLeft="20dp"
                    android:text="@string/search_title_explore"
                    android:textColor="@color/mainTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/search_tv_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/search_go_explore"
                    android:textColor="@color/skyscannerColor"
                    android:textStyle="bold"
                    android:clickable="true"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycler_explore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:clipToPadding="false"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>